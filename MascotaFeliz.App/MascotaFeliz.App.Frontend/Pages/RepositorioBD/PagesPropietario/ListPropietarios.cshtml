@page
@model MascotaFeliz.App.Frontend.Pages.ListPropietariosModel
@{
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>




<body>
<br> 
<br>
<br>  
<div class="container">
  <div class="row">
    <div class="col-sm-4">
     <img src="https://i.pinimg.com/564x/fc/ee/d4/fceed4e698f3069c8e0370e679667a04.jpg" align="right" class="img-circle person" width="400" height="200">
    </div>
    <div class="col-sm-8 border shadow p-4 rounded bg-light" style="background-image: url('https://i.pinimg.com/originals/79/42/9b/79429b1afb072dae4cf076859c97aa49.jpg');" >
            <div class="row d-flex justify-content-center">
                <div class="col-6">
                 @Html.Raw(@ViewData["Respuesta"])
                </div>
            </div>
       
<div>



<h1>Listado de Propietarios de Mascotas</h1>
<form method="get">
    <div class="form-group">
        <p>
            Filtro:
            <input type="text" name="filtroBusqueda" asp-for="FiltroBusqueda"/>
            <button
                type="submit"
                class="btn btn-primary">
                Filtrar &nbsp; &nbsp;
                <i class="fas fa-filter fa-lg"></i>
            </button>
        </p>
    </div>
</form>
<table class="table">
    <tr>
        <td><b>Nombre Completo</b></td>
        <td><b>Número de Teléfono</b></td>
        <td><b>Correo Electrónico</b></td>
        <td><b>Detalles</b></td>
        <td><b>Actualizar</b></td>
    <tr>
    @foreach (var propietario in Model.Propietarios)
    {
        <tr>
            <td>@propietario.Nombre @propietario.Apellidos</td>
            <td>@propietario.NumeroTelefono</td>
            <td>@propietario.CorreoElectronico</td>
            <td>
                <a 
                    class="btn btn-primary table-btn" 
                    asp-page="./DetailsPropietario"
                    asp-route-propietarioId="@propietario.Id">
                    <i class="fas fa-search-plus fa-lg"></i>
                    @* Detalles Propietario *@
                </a>
            </td>
            <td>
                <a 
                    class="btn btn-primary table-btn" 
                    asp-page="./EditPropietario"
                    asp-route-propietarioId="@propietario.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                    @* Actualizar Propietario *@
                </a>
            </td>
        </tr>
    }
</table>
<a
    asp-page="./EditPropietario"
    class="btn btn-primary">
    Crear Nuevo Propietario &nbsp; &nbsp;
    <i class="fas fa-file-medical fa-lg"></i>
</a>

    
</body>