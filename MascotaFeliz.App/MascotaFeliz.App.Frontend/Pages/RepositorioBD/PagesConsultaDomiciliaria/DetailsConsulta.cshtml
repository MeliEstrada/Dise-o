@page
@model MascotaFeliz.App.Frontend.Pages.DetailsConsultaModel
@{
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<body>
<br> 
<br>
<br>  
<div class="container">
  <div class="row">
    <div class="col-sm-4">
     <img src="https://sisepuedeecuador.com/wp-content/uploads/2019/04/empatia-en-la-comunicacion-con-el-cliente-en-la-clinica-veterinaria.jpg" align="right" class="img-circle person" width="400" height="400">
    </div>
    <div class="col-sm-8 border shadow p-4 rounded bg-light" style="background-image: url('https://i.pinimg.com/originals/79/42/9b/79429b1afb072dae4cf076859c97aa49.jpg');" >
            <div class="row d-flex justify-content-center">
                <div class="col-6">
                 @Html.Raw(@ViewData["Respuesta"])
                </div>
            </div>
       
<h2>@Model.Veterinario.Nombre @Model.Veterinario.Apellidos - @Model.Mascota.Nombre ( @Model.Mascota.TipoMascota )</h2>
<form method="post">
    <input type="hidden" asp-for="Consulta.Id"/>
    <div class="form-group">
        Mascota: @Model.Mascota.Nombre ( @Model.Mascota.TipoMascota )
    </div>
    <div class="form-group">
        Veterinario: @Model.Veterinario.Nombre @Model.Veterinario.Apellidos
    </div>
    <div class="form-group">
        Fecha - Hora: @Model.Consulta.Hora
    </div>
    <div class="form-group">
        Estado: @Model.Consulta.Status
    </div>
   <br>
<br>
    <div class="form-group">
        Temperatura: @Model.Consulta.Temperatura
    </div>
    <div class="form-group">
        Peso: @Model.Consulta.Peso
    </div>
    <div class="form-group">
        Frecuencia Respiratoria: @Model.Consulta.FrecuenciaRespiratoria
    </div>
    <div class="form-group">
        Frecuencia Cardiaca: @Model.Consulta.FrecuenciaCardiaca
    </div>
    <div class="form-group">
        Frecuencia Respiratoria: @Model.Consulta.FrecuenciaRespiratoria
    </div>
    <div class="form-group">
        Estado de Animo: @Model.Consulta.EstadoAnimo
    </div>
    <div class="form-group">
        Diagnóstico: @Model.Consulta.Diagnostico
    </div>
    <button
        type="submit"
        class="btn btn-primary">
        Eliminar Consulta Domiciliaria &nbsp; &nbsp;
        <i class="fas fa-trash fa-lg"></i>
    </button>
</form>
<a asp-page="./ListConsultas" class="btn-default">Lista de Consultas</a>

</body>